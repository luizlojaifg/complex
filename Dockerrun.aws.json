{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name":"client",
            "image": "luizloja/complex-client",
            "hostname":"client",
            "essential": false
        },{
            "name":"server",
            "image":"luizloja/complex-server",
            "hostname":"api",
            "essential": false
        },{
            "name":"worker",
            "image":"luizloja/complex-worker",
            "hostname":"worker",
            "essential": false
        },{
            "name":"nginx",
            "image": "luizloja/complex-nginx",
            "hostname": "nginx",
            "essential":true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client","server"]

        }
    ]
}

